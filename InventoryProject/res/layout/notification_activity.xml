<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/PreferencesTheme" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33B5E5" />

    <RelativeLayout
        android:id="@+id/notificationLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:padding="5dp" >

        <CheckBox
            android:id="@+id/check_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/check_notify"
            android:layout_alignBottom="@+id/check_notify"
            android:layout_toLeftOf="@+id/check_notify"
            android:singleLine="true"
            android:text="Notification"
            android:textColor="@color/setting_text"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/notificationLayout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/setting_divider" />

   <!--  <RelativeLayout
        android:id="@+id/ringtoneLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/notificationLayout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:padding="5dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Set Ringtone"
            android:textColor="@color/setting_text"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ringtoneLayout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/setting_divider" /> -->

    <RelativeLayout
        android:id="@+id/vibrationLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/notificationLayout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:padding="5dp" >

        <CheckBox
            android:id="@+id/check_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/check_vibrate"
            android:layout_alignBottom="@+id/check_vibrate"
            android:layout_toLeftOf="@+id/check_vibrate"
            android:singleLine="true"
            android:text="Vibrate"
            android:textColor="@color/setting_text"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>